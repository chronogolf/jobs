describe BookingEngine

  it "initializes an instance"
    is_expected.to be_a(BookingEngine)

  describe "all"

    it "returns all reservations"
      is_expected.to have_attributes(size: 3)

    describe "the first reservation"
      it "has an id and name"
        is_expected.to include(
          id: 1,
          player: "Anna"
        )

  xdescribe ".create"
    it "adds a reservation"
